<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginBottom="7dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        xmlns:tools="http://schemas.android.com/tools">


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_text"
            android:fontFamily="@font/advent_pro_extralight"
            android:textColor="#1B1B1B"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textSize="17sp"
            tools:text="11:30"
            android:layout_alignStart="@+id/task_text"
            android:layout_alignLeft="@+id/task_text" />

        <TextView
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:text="Java"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/mark_view"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/task_text"
            android:layout_toEndOf="@id/date"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/date" />


        <TextView
            android:id="@+id/task_text"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/checkbox"
            android:layout_marginStart="46dp"
            android:fontFamily="sans-serif"
            android:textColor="#1B1B1B"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="Sample text "
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="46dp"
            />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/delete"
            android:fontFamily="@font/fa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="24dp"
            android:text="\uf2ed"
            android:textColor="#E54249"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            tools:ignore="HardcodedText" />


    </RelativeLayout>
</android.support.v7.widget.CardView>